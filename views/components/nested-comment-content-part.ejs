
<div class="comment py-3">

  <div class="comment-top-part" style="margin-bottom: 1.5rem;">
    <div class="comment-profile-part d-flex flex-col">
      <a><img class="" style="width: 3.5rem;" src="/asset/defaultProfile.png" alt=""></a>
      <div class=" ml-2">
        <strong>
          <%=comment.author.id%>
        </strong>
        <div class="mt-1 text-muted data-toggle="tooltip" title="<%= moment(comment.createdAt).format('llll') %>">
          <%= moment(comment.createdAt).fromNow() %>
        </div>
      </div>
    </div>
  </div>
  <div class="comment-middle-part">
    <p>
      <%= comment.body %>
    </p>
  </div>
</div>