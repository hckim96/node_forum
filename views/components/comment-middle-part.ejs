<div class="comment-middle-part">
  <p class="comment-not-editing">
    <% if (comment.deleted) { %>
     <i class="font-lg" style="font-size: medium;">삭제된 댓글입니다.</i>
    <% } else {%>
      <%= comment.body %>
    <% } %>
  </p>
  <div class="comment-editing d-none">
    <textarea class="w-100" style="height:10rem;" required=""><%=comment.body%></textarea>
    <div class="d-flex justify-content-end">
      <button class="btn btn-link" onclick="toggleEditing(this)"> 취소 </button>
      <button class="btn btn-primary"> 댓글 수정 </button>
    </div>
  </div>
</div>
